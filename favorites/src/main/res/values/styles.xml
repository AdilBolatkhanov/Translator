<resources>

    <!-- Base application theme. -->
    <!-- Light . -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="text_color">@color/fav_text</item>
        <item name="background_color">@color/white</item>
        <item name="tint_color">@color/colorAccent</item>
        <item name="me_bubble">@color/colorAccent</item>
        <item name="navbar_tint">#949494</item>
        <item name="header_color">@color/text</item>
        <item name="lines">@color/colorAccent</item>

        <item name="fav_back">@color/white</item>
        <item name="fav_item">#1A1789DB</item>
        <item name="fav_item_icon_del">#1789DB</item>
        <item name="fav_item_icon_mes">#AA1789DB</item>
        <item name="fav_item_stroke">@color/stroke</item>
        <item name="dialog_icon">#000</item>
        <item name="search_icon">@color/text</item>
        <item name="media_bg">@color/video_text_bg</item>
        <item name="account_bg">@color/white</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>


    </style>



    <!-- Dark mode . -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black_bg</item>
        <item name="colorAccent">@color/orange</item>

        <item name="text_color">@color/white</item>
        <item name="background_color">@color/black_bg</item>
        <item name="tint_color">@color/orange</item>
        <item name="me_bubble">#074A46</item>
        <item name="navbar_tint">@color/white</item>
        <item name="header_color">@color/white</item>
        <item name="lines">@color/black_bg</item>

        <item name="fav_back">#CE323D4E</item>
        <item name="fav_item">#55DB7517</item>
        <item name="fav_item_icon_del">@color/orange</item>
        <item name="fav_item_icon_mes">@color/orange</item>
        <item name="fav_item_stroke">#55FFFFFF</item>
        <item name="dialog_icon">@color/white</item>
        <item name="media_bg">@color/black_bg</item>
        <item name="account_bg">@color/orange</item>

        <item name="search_icon">@color/orange</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="BasePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="popupMenuBackground">@drawable/popup_bg</item>
        <item name="android:popupBackground">@drawable/popup_bg</item>
        <item name="popupMenuStyle">@drawable/popup_bg</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>


    <style name="ToolbarTextViewExchange">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">?attr/tint_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
